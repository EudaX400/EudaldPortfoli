---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main class="flex flex-col min-h-screen">
  <div class="bg-eudald-mountain bg-no-repeat bg-cover bg-center sm:bg-right">
    <div
      class="flex flex-col justify-end max-w-2xl mt-20 sm:mx-2 lg:ml-10 p-4 bg-gray-700 bg-opacity-60"
    >
      <h1 class="text-center my-5">{t("header.about")}</h1>
      <p class="text-white">
        {t("about.paragraph1")}
      </p>
      <br />
      <p class="text-white">
        {t("about.paragraph2")}
      </p>
      <br />
      <p class="mb-10 text-white">
        {t("about.paragraph3")}
      </p>
    </div>
  </div>
</main>
